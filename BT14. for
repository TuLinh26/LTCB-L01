#include <stdio.h>
#include <math.h>
int main(){
    double x;
    printf ("Tong thu nhap nam 2014: ");
    scanf ("%lf", &x);
    double t = x;
    double y;
    printf ("Toc do tang truong kinh te binh quan:");
    scanf ("%lf",&y);
    printf ("Nam\t GDP\n");
    printf ("2014\t %1.lf\n",x);
    int dem = 1;
    while(1){
        x = x * y;
        if (x > 2 * t) break;
        printf ("%d\t %.1lf\n", 2014 + dem, x);
        ++dem;
    }

}
